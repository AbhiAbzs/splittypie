<h3>Event details</h3>
<div class="well">
  <div class="form-horizontal">
    <div class="form-group">
      <label for="inputEmail3" class="col-sm-2 control-label">Event Name</label>
      <div class="col-sm-10">
        {{input value=model.name classNames="form-control"}}
      </div>
    </div>
  </div>
</div>

<h3>Participants</h3>
<div class="well">
  {{user-list users=model.users}}
  <button class="btn btn-primary" {{action "addUser"}}>Add Participant</button>
</div>

<button {{action "createEvent"}} class="btn btn-success">Create Event</button>