{{#side-menu}}
  <header class="navbar navbar-default">
    <div class="navbar-header">
      {{#side-menu-link-to "index" class="navbar-brand"}}
        Splitr<strong>lite</strong>
      {{/side-menu-link-to}}
    </div>
  </header>
  <ul class="nav">
    <li class="header">Events</li>
    {{#each model.previousEvents as |event|}}
      <li>
        {{#side-menu-link-to "event" event.id}}
          <span class="glyphicon glyphicon-calendar"></span>
          {{event.name}}
        {{/side-menu-link-to}}
      </li>
    {{/each}}
    <li>
      {{#side-menu-link-to "new"}}
        <span class="glyphicon glyphicon-plus"></span>
        New Event
      {{/side-menu-link-to}}
    </li>
    <li class="divider"></li>
    <li>
      <a href="">
        <svg class="github-logo" viewBox="0 0 32 32">
          {{partial "shared/svg/github-logo"}}
        </svg>
        Source Code
      </a>
    </li>
    <li>
      <a href="">
        <svg class="cowbell-logo" viewBox="0 0 54 54">
          {{partial "shared/svg/cowbell-logo"}}
        </svg>
        Cowbell Labs
      </a>
    </li>
  </ul>
{{/side-menu}}
{{content-backdrop}}
<div class="page-content">
  {{partial "shared/navbar"}}

  <main>
    <div class="container">
      {{outlet}}
    </div>
  </main>

  {{outlet "footer"}}
</div>
{{outlet "modal"}}
