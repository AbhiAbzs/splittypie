<select class="form-control {{class}}" {{action 'change' on='change'}}>
    {{#if prompt}}
        <option value="" disabled selected={{is-not selected}}>
            {{prompt}}
        </option>
    {{/if}}

    {{#each options key="@identity" as |item|}}
        <option value="{{read-path item optionValuePath}}" selected={{is-equal item selected}}>
            {{read-path item optionLabelPath}}
        </option>
    {{/each}}
</select>
