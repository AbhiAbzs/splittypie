{{#modal-dialog}}
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title">Quick Add!</h4>
  </div>
  <div class="modal-body">
    <div class="form-group {{if isFormInvalid "has-error"}}">
      {{input value=transactionToParse class="form-control transaction-parse" placeholder="Example: 10 tickets"}}
      <div class="help-block">
        More examples: 03/24 40 Museum Tickets | 20 shopping | 12 20 shopping
      </div>
      <div>
        <p>
          <span class="{{if invalidName "red-text"}}">Name:</span> {{transaction.name}}
          <span class="{{if invalidAmount "red-text"}}">Amount:</span>
          {{#if transaction.amount}}
            {{format-money transaction.amount symbol=currency.code format="%v %s"}}
          {{/if}}
          Date: {{transaction.date}}
        </p>
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-default pull-left btn-add-with-details" {{action "addWithDetails"}} data-dismiss="modal">Add With Details</button>
    <button type="button" class="btn btn-primary btn-add" {{action "add"}} disabled={{isFormInvalid}}  data-dismiss="modal">Add</button>
  </div>
{{/modal-dialog}}