{{#mobile-toolbar}}
  {{side-menu-toggle-custom}}
  <span class="navbar-brand">{{model.name}}</span>
  <button {{action "share"}} class="navbar-btn btn btn-link">
    <span class="glyphicon glyphicon-share"></span> Share
  </button>
  {{#link-to "event.edit" class="navbar-btn btn btn-link"}}
    <span class="glyphicon glyphicon-edit"></span>
    Edit
  {{/link-to}}
{{/mobile-toolbar}}

<div class="row hidden-xs">
  <div class="col-md-12">
    <div class="pull-left">
      {{switch-event-dropdown eventName=model.name otherEvents=otherEvents}}
    </div>

    <div class="pull-right">
      <button {{action "share"}} class="btn btn-link btn-lg">
        <span class="glyphicon glyphicon-share"></span> Share
      </button>

      {{#link-to "event.edit" class="btn btn-link btn-lg"}}
        <span class="glyphicon glyphicon-edit"></span> Edit
      {{/link-to}}
    </div>
  </div>
</div>

<ul class="nav nav-tabs">
  {{#nav-link-to "event.index"}}Overview{{/nav-link-to}}
  {{#nav-link-to "event.transactions"}}Transactions{{/nav-link-to}}
</ul>

